.chat-content
  .chat-content__header
    .chat-content__name
      = message.user.name
    .chat-content__date
      = message.created_at.strftime('%Y年%m月%d日%H時%M分')
  .chat-content__message
    - if message.content.present?
      = message.content
    = image_tag message.image.url if message.image.present?
